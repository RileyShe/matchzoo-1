{
  "net_name": "DSSM",
  "lang": "java", 
  "component": "title",
  "dataset": "stackOF/java_title/",
  "out_file": "training_scores/java/dssm.tit",
  "global":{
      "model_type": "PY",
      "weights_file": "trained_weights/java/dssm.title.weights",
      "save_weights_iters": 20,
      "num_iters": 200,
      "display_interval": 50,
      "test_weights_iters": 180,
      "optimizer": "adam",
      "learning_rate": 0.00001
  },
  "inputs": {
    "share": {
        "text1_corpus": "stackOF/java_title/corpus_preprocessed.txt",
        "text2_corpus": "stackOF/java_title/corpus_preprocessed.txt",
        "word_triletter_map_file": "stackOF/java_title/word_triletter_map.txt",
        "target_mode": "ranking",
        "vocab_size": 10586,
        "embed_size": 200 
    },
    "train": {
        "input_type": "Triletter_PairGenerator", 
        "dtype": "dssm",
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "stackOF/java_title/relation_train.txt"
    },
    "valid": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "stackOF/java_title/relation_valid.txt"
    },
    "test": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "stackOF/java_title/relation_test.txt"
    },
    "predict": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "stackOF/java_title/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "result/java/dssm.title.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "dssm.DSSM",
    "setting": {
        "hidden_sizes": [300],
        "dropout_rate": 0.5
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@10", "ndcg@100", "mrr" ]
}

