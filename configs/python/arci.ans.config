{
  "net_name": "ARCI",
  "out_file": "training_scores/python/arci.ans",
  "dataset": "stackOF",
  "global":{
      "model_type": "PY",
      "weights_file": "trained_weights/python/arci.ans.weights",
      "save_weights_iters": 10,
      "num_iters": 500,
      "display_interval": 10,
      "test_weights_iters": 500,
      "optimizer": "adam",
      "learning_rate": 0.000010
  },
  "inputs": {
    "share": {
        "text1_corpus": "stackOF/python_answer/corpus_preprocessed.txt",
        "text2_corpus": "stackOF/python_answer/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 50,
        "vocab_size": 37976,
        "train_embed": false,
        "target_mode": "ranking",
        "text1_maxlen": 10,
        "text2_maxlen": 40
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "stackOF/python_answer/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "stackOF/python_answer/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "stackOF/python_answer/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "stackOF/python_answer/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.wikiqa.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "arci.ARCI",
    "setting": {
        "kernel_count": 128,
        "kernel_size": 3,
        "q_pool_size": 4,
        "d_pool_size": 4,
        "dropout_rate": 0.95
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss",
       "object_params": { "margin": 1.0 }
    }
  ],
  "metrics": [ "ndcg@10", "ndcg@100", "mrr" ]
}

