{
  "net_name": "DRMM_TKS",
  "dataset": "stackOF",
  "global":{
      "model_type": "PY",
      "weights_file": "../MatchZoo_data/trained_weights/wikiqa/drmm_tks.wikiqa.weights",
      "save_weights_iters": 10,
      "num_iters": 500,
      "display_interval": 10,
      "test_weights_iters": 500,
      "optimizer": "adadelta",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "../MatchZoo_data/stackOF/python_question/corpus_preprocessed.txt",
        "text2_corpus": "../MatchZoo_data/stackOF/python_question/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 300,
        "vocab_size": 38555,
        "train_embed": false,
        "target_mode": "ranking",
        "text1_maxlen": 10,
        "text2_maxlen": 40
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "../MatchZoo_data/stackOF/python_question/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "../MatchZoo_data/stackOF/python_question/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "../MatchZoo_data/stackOF/python_question/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "../MatchZoo_data/stackOF/python_question/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.wikiqa.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "drmm_tks.DRMM_TKS",
    "setting": {
        "topk": 20,
        "num_layers": 2,
        "hidden_sizes": [5, 1] 
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@10", "ndcg@100", "mrr" ]
}

