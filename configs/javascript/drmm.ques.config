{
  "net_name": "DRMM",
  "dataset": "stackOF/javascript_question/",
   "out_file": "training_scores/javascript/drmm.ques",
  "global":{
      "model_type": "PY",
      "weights_file": "trained_weights/javascript/drmm.ques.weights",
      "save_weights_iters": 100,
      "num_iters": 401,
      "display_interval": 100,
      "test_weights_iters": 200,
      "optimizer": "adadelta",
      "learning_rate": 0.00001
  },
  "inputs": {
    "share": {
        "text1_corpus": "stackOF/javascript_question/corpus_preprocessed.txt",
        "text2_corpus": "stackOF/javascript_question/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 200,
        "vocab_size": 33997,
        "train_embed": false,
        "target_mode": "ranking",
        "hist_size": 60,
        "text1_maxlen": 10
    },
    "train": {
        "input_type": "DRMM_PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "stackOF/javascript_question/relation_train.txt",
        "hist_feats_file": "stackOF/javascript_question/relation_train.hist-60.txt"
    },
    "valid": {
        "input_type": "DRMM_ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "stackOF/javascript_question/relation_valid.txt",
        "hist_feats_file": "stackOF/javascript_question/relation_valid.hist-60.txt"
    },
    "test": {
        "input_type": "DRMM_ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "stackOF/javascript_question/relation_test.txt",
        "hist_feats_file": "stackOF/javascript_question/relation_test.hist-60.txt"
    },
    "predict": {
        "input_type": "DRMM_ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "stackOF/javascript_question/relation_test.txt",
        "hist_feats_file": "stackOF/javascript_question/relation_test.hist-60.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "result/javascript/drmm.question.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "drmm.DRMM",
    "setting": {
        "num_layers": 2,
        "hidden_sizes": [20, 1],
	    "dropout_rate": 0.0
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "ndcg@10", "ndcg@100", "mrr" ]
}

